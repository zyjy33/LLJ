<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout
         android:id="@+id/rl_title"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_alignParentTop="true"
         android:layout_gravity="center_horizontal"
         android:background="@color/ybs" >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:text="赚乐豆"
             android:textSize="18dip" />

         <ImageView
             android:id="@+id/iv_fanhui"
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:src="@drawable/fanhuijian"
             android:textSize="18dip" />

     </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout 
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/item0" 
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="18dp"
                    />
                	<TextView 
                	    android:layout_width="wrap_content"
                	    android:layout_height="wrap_content"
                	    android:text="乐豆游戏"
                	    android:layout_marginTop="5dp"
                	    android:layout_marginBottom="5dp"
                	    android:layout_marginLeft="15dp"/>
                	<View 
                	    android:layout_width="match_parent"
                	    android:layout_height="1dp"
                	    android:background="@color/list_diver"/>
                	<LinearLayout 
                	    android:layout_width="match_parent"
                	    android:orientation="horizontal"
                	    android:layout_height="wrap_content">
                	    <LinearLayout 
                	         android:id="@+id/item1" 
                	        android:layout_width="0dp"
                	        android:orientation="vertical"
                	        android:layout_weight="1"
                	        android:layout_height="80dp"
                	        />
                	    <View android:layout_width="1dp"
                	        android:layout_height="match_parent"
                	        android:background="@color/list_diver"/>
                	     <LinearLayout 
                	          android:id="@+id/item2" 
                	          android:orientation="vertical"
                	        android:layout_width="0dp"
                	        android:layout_weight="1"
                	        android:layout_height="80dp"
                	        />
                	</LinearLayout>
                	<View 
                	    android:layout_width="match_parent"
                	    android:layout_height="1dp"
                	    android:background="@color/list_diver"/>
                	
                	
                	 <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
            android:background="@color/dihuise"
         />
                	 <LinearLayout
                android:id="@+id/ll_zhuti"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_zhuti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="更多"
                    android:textColor="@color/ban_louming"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/yjf" />
            </LinearLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_item_line" />
             
             <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_xianshi"
        android:visibility="gone"
        android:layout_marginTop="0dp"
        android:divider="@drawable/list_div"
                    android:dividerHeight="1dip"/>
             	<com.lglottery.www.widget.InScrollListView 
                	    android:id="@+id/scrool"
                	    android:layout_width="match_parent"
                	    android:layout_height="wrap_content"
                	    android:background="@color/no_color"
                	    android:cacheColorHint="@color/no_color"
                	    android:divider="@color/list_diver"
                	    android:dividerHeight="1dp">
                	    
                	</com.lglottery.www.widget.InScrollListView>
             <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
            android:background="@color/dihuise"
         />
              <LinearLayout
                android:id="@+id/ll_zhuti2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="推广传播"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="更多"
                    android:textColor="@color/ban_louming"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/yjf" />
            </LinearLayout>
             <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_item_line" />
             <com.lglottery.www.widget.InScrollListView 
                	    android:id="@+id/scroo2"
                	    android:layout_width="match_parent"
                	    android:layout_height="wrap_content"
                	    android:background="@color/no_color"
                	    android:cacheColorHint="@color/no_color"
                	    android:divider="@color/list_diver"
                	    android:dividerHeight="1dp">
                	    
                	</com.lglottery.www.widget.InScrollListView>
             
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
